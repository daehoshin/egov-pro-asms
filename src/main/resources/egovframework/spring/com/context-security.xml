<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
xmlns:beans="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context-3.0.xsd
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.0.3.xsd">

	<http auto-config="true" entry-point-ref="authenticationEntryPoint">
		
		<intercept-url pattern="/" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/favicon.ico" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/bootstrap-theme/**" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		
		<!-- 전자결재를 위한 모듈을 로그인 체크하지 않음 -->
		<intercept-url pattern="/reg/intf/**" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/kamsInoutXml.do" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/blank.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/remote.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		
		<intercept-url pattern="/common/clsssearch/ClssSubTree.do" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/common/tree/ClssSubTree.do" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/common/clsssearch/ClssAgeTree.do" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/common/tree/ClssAgeTree.do" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/common/clsssearch/ClssBusTree.do" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/common/tree/ClssBusTree.do" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/nurizipUrl.do" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		
		<intercept-url pattern="/index.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/welcome.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/logout.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/code404.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/code500.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/sso.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/ssologin.do" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/js/**" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/images/**" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<intercept-url pattern="/css/**" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		<!-- 문서보안 솔루션 컨트롤파일 설치 -->
		<intercept-url pattern="/control/**" access="IS_AUTHENTICATED_ANONYMOUSLY" filters="none"/>
		
		<intercept-url pattern="/**" access="ROLE_USER,ROLE_ADMIN" />
		
		<form-login login-page="/welcome.jsp" default-target-url="/login.do" authentication-failure-url="/welcome.jsp?result=false" 
			always-use-default-target='true' />
			
<!-- 		<session-management invalid-session-url="/logout.jsp?msg=invalid" session-fixation-protection="migrateSession" /> -->
		<session-management session-fixation-protection="none" />
			
		<logout logout-success-url="/logout.jsp?msg=logout" invalidate-session="true" />
		<anonymous />
	</http>
	
	<jdbc-user-service id="jdbcUserService" data-source-ref="dataSource-oracle" users-by-username-query="
	      select user_id, user_pwd, enabled 
	      from tb_stuser 
	      where upper(login_user_id) = upper(?)
	      and use_flag ='0'" 
	   authorities-by-username-query="
	      select user_id, authority from tb_stuser where user_id=?" 
	 />
			
	<authentication-manager>
		<authentication-provider user-service-ref="jdbcUserService">
			<password-encoder hash="sha-256"/><!-- hash="sha-256"  -> 암호화 방식을 설정 -->
  		</authentication-provider>
	</authentication-manager>
		
</beans:beans>